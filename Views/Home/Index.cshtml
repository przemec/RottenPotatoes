@model dynamic
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to RottenPotatoes</h1>
    <h3 class="display-7" style="font-weight: 300;">Browse Your favourite movies and rate them!</h3>
    <div style="margin-top: 30px;" class="container-fluid">
        <table class="table">
            <tr>
                <td>
                    <strong>Title</strong>
                </td>
                <td>
                    <strong>Director</strong>
                </td>
                <td>
                    <strong>Score</strong>
                </td>
            </tr>
            @foreach (var movie in Model.Movies)
            {
                <tr>
                    <td>
                        <a class="nav-link text-dark" style="text-decoration: underline;" asp-controller="Home" asp-action="MovieDetails" asp-route-movieid="@movie.MovieId">@movie.Title</a>
                    </td>
                    <td style="vertical-align: middle;">
                        @movie.Director
                    </td>
                    <td style="vertical-align: middle;">
                        @try
                        {
                            @(Math.Round(Model.Votes[movie.MovieId][0], 1));@:/5
                        }
                        catch (KeyNotFoundException)
                        {
                            @:No score
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
